<div class="row">
<div class="col-6">
<h2>Burgers that are not yet Devoured!</h2>

<ul class="burger-list" style="list-style-type:none;">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

</div>
<div class="col-6">
<h2>Burgers that are Devoured!</h2>

<ul class="burger-list" >
  {{#each burgers}}
    {{#if devoured}}
     <li>    
	   {{id}} {{burger_name}}
     </li>
       {{/if}}
  {{/each}}
</ul>
</div>
</div>
<div>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
</div>
